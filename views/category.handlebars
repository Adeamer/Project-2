<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{fname}} {{lname}}!</h2>
  </div>
</div>
<div class='row mt-4'>
  <div class='col-md-12'>
    {{#if categories.length}}
      <div class='col-md-12 project-list'>
        <h3>Categories</h3>

        {{#each categories as |category|}}
          <div class='card'>
            <div class='row mb-2'>
              <div class='col-md-8'>
                <h4><a
                    href='/category/{{category.id}}'
                  >{{category.name}}</a></h4>
              </div>
              <div class='col-md-4'>
                <a
                  href='/updatecategory/{{category.id}}'
                  class='btn btn-primary'
                >Update</a>

                <button
                  class='btn btn-sm btn-danger'
                  data-id='{{category.id}}'
                >DELETE</button>
              </div>

            </div>
          </div>

        {{/each}}
      </div>
    {{/if}}

  </div>
</div>

<script src='./js/category.js'></script>